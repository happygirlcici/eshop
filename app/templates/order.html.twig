{% extends "master.html.twig" %}

{% block title %}Placing order{% endblock %}

{% block content %}
    
    <div class="container">
        <section class="section-title">
            <h1>Placing Order</h1>
        </section>
        <div class="col-md-6">  
            <h4>Total value before tax is {{ totalBeforeTax }}.</h4>
            <h4>Shipping before tax is {{ shippingBeforeTax }}.</h4>
            <h4>Taxes (GST/QST/HST) {{ taxes }}. </h4>
            <h4>Final total with shipping and taxes (amount to be paid):
                <b>{{ totalWithShippingAndTaxes }}</b>.
                </h5>
                <form method="POST">
                    <div class="form-group">
                        <label>Name: </label>
                        <input type="text" name="name" placeholder="name" class="input-txt login_form" required="required" value="{{sessionUser.name}}"/><br>
                        <label>Address: </label>
                        <input type="text" name="address" placeholder="address" class="input-txt login_form" required="required" /><br>
                        <label>Postal code: </label>
                        <input type="text" name="postalCode" placeholder="postal code" class="input-txt login_form" required="required" /><br>
                        <label>Email: </label>
                        <input type="email" name="email" placeholder="email" class="input-txt login_form" required="required" value="{{sessionUser.email}}"><br>
                        <label>Phone number: </label>
                        <input type="text" name="phoneNumber" placeholder="phone number" class="input-txt login_form" required="required" /><br>
                    </div>
                    <input type="submit" class="btn-lg btn-primary" value="Place order">
                </form>
        </div>
    </div>    
    <br/>
    
{% endblock %}