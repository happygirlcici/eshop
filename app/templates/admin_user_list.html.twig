{% extends "admin_panel.html.twig" %}

{% block title %}Admin User{% endblock %}

{% block content %}
    <div class="center_content">  

        <div class="right_content">            
            <h2 class="left_h2">Users List</h2> 
            <div class="sidebar_search">
                <form action="/admin/user/search" method="POST">
                    <input type="text" name="searchinput" class="search_input" value="{{str}}" onclick="this.value = ''" />
                    <input type="image" class="search_submit" src="/images/admin/search.png" alt="search_submit"/>
                </form>            
            </div>

            <table id="rounded-corner" summary="2007 Major IT Companies' Profit">
                <thead>
                    <tr>
                        <th scope="col" class="rounded-company"></th>
                        <th scope="col" class="rounded">ID</th>
                        <th scope="col" class="rounded">Name</th>
                        <th scope="col" class="rounded">Email</th>
                        <th scope="col" class="rounded">Status</th>
                        <th scope="col" class="rounded">Edit</th>
                        <th scope="col" class="rounded-q4">Delete</th>
                        <th scope="col" class="rounded-q4">Block</th>
                    </tr>
                </thead>
                
                {% for u in userList %}
                    <tr>
                        <td><input type="checkbox" name="ckbox" /></td>
                        <td>{{u.ID}}</td>
                        <td>{{u.name}}</td>
                        <td>{{u.email}}</td>
                        <td>{{u.status}}</td>
                        <td><a href="/admin/user/edit/{{u.ID}}"><img src="/images/admin/edit.png" alt="" title="" border="0" /></a></td>
                        <td><a href="/admin/user/delete/{{u.ID}}" class="ask"><img src="/images/admin/trash.png" alt="" title="" border="0" /></a></td>
                        <td><a href="/admin/user/block/{{u.ID}}" class="ask"><img src="/images/admin/block.png" alt="" title="" border="0" /></a></td>
                    </tr> 
                {% endfor %}
            </table>

            <a href="/admin/user/add" class="bt_green"><span class="bt_green_lft"></span><strong>Add User</strong><span class="bt_green_r"></span></a>
            <a href="/admin/user/list" class="bt_blue"><span class="bt_blue_lft"></span><strong>List User</strong><span class="bt_blue_r"></span></a>
{#            <a href="/admin/user/block" class="bt_red"><span class="bt_red_lft"></span><strong>Block User</strong><span class="bt_red_r"></span></a> #}

            <div class="pagination">
                <span class="disabled"><< prev</span>
                {% for u in userList %}
                     {% if loop.index0 % 8 == 0 %}
                         <a href="">{{loop.index0 / 8}}</a>
                    {% endif %}     
                {% endfor %}
                <a href="">next >></a>
            </div> 
        </div><!-- end of right content-->
    </div>   <!--end of center content --> 
{% endblock content %}

