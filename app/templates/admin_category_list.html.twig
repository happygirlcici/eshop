{% extends "admin_panel.html.twig" %}

{% block title %}Admin Category{% endblock %}

{% block content %}
    <div class="center_content">  

        <div class="right_content">            
            <h2 class="left_h2">Products Categories List</h2> 
            <div class="sidebar_search">
            <form action="/admin/category/search" method="POST">
                <input type="text" name="searchinput" class="search_input" value="{{str}}" onclick="this.value = ''" />
                <input type="image" class="search_submit" src="/images/admin/search.png" alt="search_submit"/>
            </form>            
            </div>

            <table id="rounded-corner" summary="2007 Major IT Companies' Profit">
                <thead>
                    <tr>
                        <th scope="col" class="rounded-company"></th>
                        <th scope="col" class="rounded">ID</th>
                        <th scope="col" class="rounded">Name</th>
                        <th scope="col" class="rounded">Description</th>
                        <th scope="col" class="rounded">Status</th>
                        <th scope="col" class="rounded">Post Date</th>
                        <th scope="col" class="rounded">Edit</th>
                        <th scope="col" class="rounded-q4">Delete</th>
                    </tr>
                </thead>
                {% for c in categoryList %}
                    <tr>
                        <td><input type="checkbox" name="ckbox" /></td>
                        <td>{{c.ID}}</td>
                        <td>{{c.name}}</td>
                        <td>{{c.description}}</td>
                        <td>{{c.status}}</td>
                        <td>{{c.postDate}}</td>
                        <td><a href="/admin/category/edit/{{ c.ID }}"><img src="/images/admin/edit.png" alt="" title="" border="0" /></a></td>
                        <td><a href="/admin/category/delete/{{ c.ID }}" class="ask"><img src="/images/admin/trash.png" alt="" title="" border="0" /></a></td>
                    </tr> 
                {% endfor %}
            </table>

            <a href="/admin/category/add" class="bt_green"><span class="bt_green"></span><strong>Add Category </strong><span class="bt_green_r"></span></a>
            <a href="/admin/categroy/list" class="bt_blue"><span class="bt_blue_lft"></span><strong>List Category</strong><span class="bt_blue_r"></span></a>
{#            <a href="admin/categroy/delete" class="bt_red"><span class="bt_red_lft"></span><strong>Delete Product</strong><span class="bt_red_r"></span></a>  #}

            <div class="pagination">
                 <span class="disabled"><< prev</span>
                {% for u in categoryList %}
                     {% if loop.index0 % 8 == 0 %}
                         <a href="">{{loop.index0 / 8}}</a>
                    {% endif %}     
                {% endfor %}
                <a href="">next >></a>
            </div> 
        </div><!-- end of right content-->
    </div>   <!--end of center content --> 
{% endblock content %}

