{% extends "admin_panel.html.twig" %}

{% block title %}Admin Category{% endblock %}

{% block content %}
    <div class="center_content">  

        <div class="right_content">            
            <h2 class="left_h2">Customer Message List</h2> 
            <div class="sidebar_search">
            <form>
                <input type="text" name="searchinput" class="search_input" value="search keyword" onclick="this.value = ''" />
                <input type="image" class="search_submit" src="/images/admin/search.png" alt="search_submit"/>
            </form>            
            </div>

            <table id="rounded-corner" summary="2007 Major IT Companies' Profit">
                <thead>
                    <tr>
                        <th scope="col" class="rounded-company"></th>
                        <th scope="col" class="rounded">Id</th>
                        <th scope="col" class="rounded">Name</th>
                        <th scope="col" class="rounded">subject</th>
                        <th scope="col" class="rounded">email</th>
                        <th scope="col" class="rounded">phone</th>
                        <th scope="col" class="rounded">Post Date</th>
                        <th scope="col" class="rounded">Reply Message</th>
                        <th scope="col" class="rounded-q4">Delete</th>
                    </tr>
                </thead>
                {% for v in mList %}
                    <tr>
                        <td><input type="checkbox" name="ckbox" /></td>
                        <td>{{v.ID}}</td>
                        <td>{{v.name}}</td>
                        <td>{{v.subject}}</td>
                        <td>{{v.email}}</td>
                        <td>{{v.phone}}</td>
                        <td>{{v.postDate}}</td>
                        <td><a href="/admin/message/replay/{{ v.ID }}"><img src="/images/admin/replay.png" alt="" title="" border="0" /></a></td>
                        <td><a href="/admin_message_delete/{{ v.ID }}" class="ask"><img src="/images/admin/trash.png" alt="" title="" border="0" /></a></td>
                    </tr> 
                {% endfor %}
            </table>

            <a href="#" class="bt_green"><span class="bt_green_lft"></span><strong>Add new message</strong><span class="bt_green_r"></span></a>
            <a href="#" class="bt_blue"><span class="bt_blue_lft"></span><strong>Reply a Messages </strong><span class="bt_blue_r"></span></a>
            <a href="#" class="bt_red"><span class="bt_red_lft"></span><strong>Delete a Messages</strong><span class="bt_red_r"></span></a> 

            <div class="pagination">
                 <span class="disabled"><< prev</span>
                {% for u in categoryList %}
                     {% if loop.index0 % 8 == 0 %}
                         <a href="">{{loop.index0 / 8}}</a>
                    {% endif %}     
                {% endfor %}
                <a href="">next >></a>
            </div> 
        </div><!-- end of right content-->
    </div>   <!--end of center content --> 
{% endblock content %}

