{% extends "admin_panel.html.twig" %}

{% block title %}Admin Order{% endblock %}

{% block content %}
    <div class="center_content">  
        <div class="right_content">            
            <h2 class="left_h2">Orders List</h2> 
            <div class="sidebar_search" >
               <form action="/admin/order/search" method="POST">
                   <input type="text" name="searchinput" class="search_input" value="{{str}}" onclick="this.value = ''" />
                   <input type="image" class="search_submit" src="/images/admin/search.png" alt="search_submit" />
               </form>            
            </div>
           
            <table id="rounded-corner">
                <thead>
                    <tr>
                        <th scope="col" class="rounded-company"></th>
                        <th scope="col" class="rounded">ID</th>
                        <th scope="col" class="rounded">User Name</th>
                        <th scope="col" class="rounded">Price</th>
                        <th scope="col" class="rounded">Placing Date</th>
                        <th scope="col" class="rounded">Shipping Date</th>
                        <th scope="col" class="rounded">Edit</th>
                        <th scope="col" class="rounded-q4">Delete</th>
                    </tr>
                </thead>
                {% for o in orderList %}
                    <tr>
                        <td><input type="checkbox" name="ckbox" /></td>
                        <td>{{o.ID}}</td>
                        <td>{{o.name}}</td>
                        <td>{{o.totalWithShippingAndTaxes}}</td>
                        <td>{{o.dateTimePlaced}}</td>
                        <td>{{o.dateTimeShipped}}</td>
                        <td><a href="/admin/order/edit/{{o.ID}}"><img src="/images/admin/edit.png" alt="" title="" border="0" /></a></td>
                        <td><a href="/admin/order/delete/{{o.ID}}" class="ask"><img src="/images/admin/trash.png" alt="" title="" border="0" /></a></td>
                    </tr> 
                {% endfor %}
            </table>

            <a href="/admin/order/add" class="bt_green"><span class="bt_green_lft"></span><strong>Add Order</strong><span class="bt_green_r"></span></a>
            <a href="/admin/order/list" class="bt_blue"><span class="bt_blue_lft"></span><strong>List Order</strong><span class="bt_blue_r"></span></a>
{#            <a href="/admin/order/delete" class="bt_red"><span class="bt_red_lft"></span><strong>Delete orders</strong><span class="bt_red_r"></span></a> #}

            <div class="pagination">
                <span class="disabled"><< prev</span>
                {% for o in orderList %}
                     {% if loop.index0 % 8 == 0 %}
                         <a href="">{{loop.index0 / 8}}</a>
                    {% endif %}     
                {% endfor %}
                <a href="">next &gt;&gt;</a>
            </div> 
        </div><!-- end of right content-->
    </div>   <!--end of center content --> 
{% endblock content %}

